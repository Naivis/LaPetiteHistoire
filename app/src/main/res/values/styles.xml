<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Secondaire</item>
    </style>

    <style name="BoutonClassique">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/Primaire</item>
        <item name="android:textColor">@color/Texte</item>
    </style>

    <style name="BoutonAjouterFavoris">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/Primaire</item>
        <item name="android:textColor">@color/Texte</item>
    </style>

    <style name="Titre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Noir</item>
    </style>

    <style name="TitreHistoire">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Noir</item>
    </style>

    <style name="contenuHistoire">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Noir</item>
    </style>

    <style name="numeroPage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginLeft">250dp</item>
        <item name="android:textColor">@color/Noir</item>
    </style>

    <style name ="TexteSimple">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name ="ListeActions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">75dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="ScrollViewBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="LinearLayoutBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/Secondaire</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">15dp</item>
    </style>
</resources>

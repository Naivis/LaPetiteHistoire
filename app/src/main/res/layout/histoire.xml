<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Secondaire">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="368dp"
            android:layout_height="495dp">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Titre"
                    style="@style/Titre"
                    android:layout_centerHorizontal="true"
                    android:text="Titre de l'histoire" />


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/Export"
                        android:layout_width="70dp"
                        android:layout_height="51dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/logo_export_rouge_25" />


                    <ImageButton
                        android:id="@+id/boutonFavoris"
                        android:layout_width="70dp"
                        android:layout_height="51dp"
                        android:layout_gravity="right"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/favorite_icon_rouge_39" />

                </LinearLayout>

                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/histoire" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
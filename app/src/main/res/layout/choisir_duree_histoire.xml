<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Secondaire"
    tools:context="com.example.rebierrequentin.lapetitehistoire.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            style="@style/Titre"
            android:text="@+string/titre_app"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.113" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="140dp"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:src="@drawable/logo_import_rouge_25" />

            <ImageButton
                android:id="@+id/boutonFavoris"
                android:layout_width="70dp"
                android:layout_height="51dp"
                android:layout_gravity="right"
                android:layout_marginStart="8dp"
                android:src="@drawable/favorite_icon_rouge_39" />


        </LinearLayout>







    <Button
        android:id="@+id/ToutesLesHistoires"
        style="@style/BoutonClassique"
        android:text="@string/toutesleshistoires"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/histoire2min"
        style="@style/BoutonClassique"
        android:text="@string/histoire2min"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/histoire5min"
        style="@style/BoutonClassique"
        android:text="@string/histoire5min"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/histoire15min"
        style="@style/BoutonClassique"
        android:text="@string/histoire15min"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/histoire30min"
        style="@style/BoutonClassique"
        android:text="@string/histoire30min"
        android:layout_gravity="center"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ScrollViewBase">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.groupedtut.activities.RefusActivity"
        style="@style/LinearLayoutBase">

    <TextView
        android:id="@+id/messageRefus"
        android:text="Vous avez refusé les autorisations pour utiliser notre application !"
        style="@style/TexteSimple"/>


        <TextView
            android:id="@+id/messageRefusExplication1"
            style="@style/TexteSimple"
            android:text="Notre application nécessite l\'envoi de SMS pour fonctionner" />

    <TextView
        android:id="@+id/messageRefusExplication2"
        android:text="1 - Ouvrez 'Paramètres'"
        style="@style/ListeActions" />

    <TextView
        android:id="@+id/messageRefusExplication3"
        android:text="2 - Ouvrez 'Applications'"
        style="@style/ListeActions" />

    <TextView
        android:id="@+id/messageRefusExplication4"
        android:text="3 - Ouvrez 'La Petite Histoire'"
        style="@style/ListeActions" />

    <TextView
        android:id="@+id/messageRefusExplication5"
        android:text="4 - Ouvrez 'Autorisations'"
        style="@style/ListeActions" />

    <TextView
        android:id="@+id/messageRefusExplication6"
        android:text="5 - Cochez la case 'SMS"
        style="@style/ListeActions" />

    <TextView
        android:id="@+id/messageRefus2"
        android:text="6 - Relancez l\'application"
        style="@style/ListeActions" />


</LinearLayout>

</ScrollView>